<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>debug</id>
  <formats>
    <format>dir</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>..</directory>
      <includes>
        <include>LICENSE</include>
        <include>NOTICE</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/assembly</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>.vscodeignore</include>
        <include>README*</include>
        <include>CHANGELOG*</include>
        <include>swf.png</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../swf-debug-adapter/target</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>swf-debug-adapter.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../swf-debug-adapter/target</directory>
      <outputDirectory>bundled-debugger</outputDirectory>
      <includes>
        <include>debugger-*.jar</include>
        <include>compiler-*.jar</include>
        <include>compiler-common-*.jar</include>
        <include>swfutils-*.jar</include>
        <include>antlr-2*.jar</include>
        <include>commons-io-*.jar</include>
        <include>gson-*.jar</include>
        <include>guava-*.jar</include>
      </includes>
      <excludes>
        <exclude>compiler-externc-*.jar</exclude>
        <exclude>compiler-jburg-types-*.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>../check-java-version/target</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../vscode-extension</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>package.json</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../vscode-extension/target</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>extension.js</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>